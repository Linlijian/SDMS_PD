@using Microsoft.AspNet.Identity
@model WEBAPP.Areas.Users.Models.LoginViewModel
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right ">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <center>
        <br><br><br><br>

        <br><br><br>

        <ul class="nav navbar-nav navbar-right">
            @using (Html.BeginForm("SignIn", "Account", null, FormMethod.Get,
                                                              new { enctype = "multipart/form-data" }))
            {
                <div class="col-md-12 col-xs-12">
                    <div class="loginbox">
                        <img src="@Url.Content("~/Uploads/Image/logo/logo_v-smart.png")" class="avatar">
                        <br><br><br><br>
                        <label>User Name</label>
                        <br><br>

                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        <br><br><br>
                        <label>Password</label>
                        <br><br>

                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        <br><br><br>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Submit" class="btn btn-default" />
                            </div>
                        </div>
                        @RenderBody()
                        <br>

                    </div>
                </div>
            }

        </ul>
    </center>
}


