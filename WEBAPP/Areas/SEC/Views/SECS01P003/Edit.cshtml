@using FluentBootstrap
@using WEBAPP.Helper
@using DataAccess.SEC
@using UtilityLib

@model SECS01P003Model

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutChildPage.cshtml";
}

@using (var form = Html.Bootstrap().Form().SetId("form1").SetHorizontal().Begin())
{
    @Html.AntiForgeryToken()
    using (var row = Html.Bootstrap().GridRow().Begin())
    {
        using (row.GridColumn(12).SetXs(12).Begin())
        {
            using (var r = Html.Bootstrap().GridRow().Begin())
            {
                using (r.GridColumn(6).Begin())
                {
                    @form.InputFor(m => m.PRG_CODE, isRequired: true).IsDisabled()
                }

                using (r.GridColumn(6).Begin())
                {
                    @form.SelectFor(t => t.PRG_TYPE, Model.PRG_TYPE_MODEL.ToSelectList("Value", "Text", Model.PRG_TYPE), isRequired: true)
                }
            }
            using (var r = Html.Bootstrap().GridRow().Begin())
            {
                using (r.GridColumn(6).Begin())
                {
                    @form.TextAreaFor(m => m.PRG_NAME_TH, 3, isRequired: true)
                }
                using (r.GridColumn(6).Begin())
                {
                    @form.TextAreaFor(m => m.PRG_NAME_EN, 3, isRequired: true)
                }
            }

            using (var r = Html.Bootstrap().GridRow().Begin())
            {
                using (r.GridColumn(6).Begin())
                {
                    @form.InputFor(m => m.PRG_AREA, isRequired: true).SetMaxLength(50)
                }

                using (r.GridColumn(6).Begin())
                {
                    @form.InputFor(m => m.PRG_CONTROLLER, isRequired: true).SetMaxLength(50)
                }
            }

            using (var r = Html.Bootstrap().GridRow().Begin())
            {
                using (r.GridColumn(6).Begin())
                {
                    @form.InputFor(m => m.PRG_ACTION, isRequired: true).SetMaxLength(50)
                }

                using (r.GridColumn(6).Begin())
                {
                    @form.InputFor(m => m.PRG_PARAMETER, isRequired: true).SetMaxLength(500)
                }
            }

            using (var r = Html.Bootstrap().GridRow().Begin())
            {
                using (r.GridColumn(6).Begin())
                {
                    @form.SelectFor(t => t.PRG_STATUS, Model.PRG_STATUS_MODEL.ToSelectList("Value", "Text", Model.PRG_STATUS), isRequired: true)
                }
                @*using (r.GridColumn(6).Begin())
                {
                    @form.InputFileuploadFor(m => m.PRG_IMG)
                }*@
            }
        }
    }
}
@section modals{

}
@section Scripts {
<script type="text/javascript">
        const onPressOnly = (event, regex) => {
            var eventCode = event.which;
            if ((eventCode >= 37 && eventCode <= 40) || eventCode == 8 || eventCode == 9 || eventCode == 46) { // Left  / Right Arrow, Backspace, Delete keys
                return;
            }
            if (regex.test(event.key) === false) {
                event.preventDefault()
                return false;
            }
        }
        // TH
        $(document).ready(function () {
            $("#PRG_NAME_TH").on("keydown", (event) => {
                return onPressOnly(event, /^[ก-๛]+$/)
            });
        });

        // END TH


        // ENG
        $(document).ready(function () {
            $("#PRG_NAME_EN").on("keydown", (event) => {
                return onPressOnly(event, /^[A-Za-z]+$/)
            });
        });

        //END ENG
</script>

}